    "test:ui": "vitest --ui",
    "test:ci": "npm run test -- --coverage",
    "test:staged": "vitest related --run",
    "test:watch": "vitest --passWithNoTests",
    "start": "tsx watch src"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "18.6.0",
    "@commitlint/config-conventional": "18.6.0",
